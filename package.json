{
  "name": "hdtickets",
  "version": "2.0.0",
  "description": "HD Tickets - Sports Event Ticket Monitoring Platform",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint resources/js --ext .js,.ts",
