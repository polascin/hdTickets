{
    "name": "sports-ticket-monitor-frontend",
    "description": "Frontend application for Sports Event Ticket Availability Monitoring System",
    "version": "4.0.0",
    "private": true,
    "type": "module",
    "keywords": [
        "sports",
        "tickets",
        "monitoring",
        "vue",
        "alerts",
        "events"
    ],
    "author": "Lubomir Polascin (Ľubomír Polaščín) aka Walter Csoelle",
    "scripts": {
        "build": "NODE_ENV=production vite build",
        "build:analyze": "NODE_ENV=production ANALYZE=true vite build",
        "build:production": "NODE_ENV=production vite build --mode production",
        "build:staging": "NODE_ENV=production vite build --mode staging",
        "build:dev": "NODE_ENV=development vite build",
        "build:watch": "NODE_ENV=production vite build --watch",
        "build:report": "NODE_ENV=production REPORT=true vite build",
        "dev": "NODE_ENV=development vite",
        "dev:debug": "NODE_ENV=development vite --debug",
        "dev:host": "NODE_ENV=development vite --host",
        "dev:https": "NODE_ENV=development vite --https",
        "preview": "vite preview",
        "preview:https": "vite preview --https",
        "websocket": "npx soketi start --config=soketi.config.json",
        "websocket:daemon": "npx soketi start --config=soketi.config.json --daemonize",
        "websocket:stop": "pkill -f soketi",
        "dev:full": "npm run websocket & npm run dev",
        "clean": "rm -rf public/build public/hot .vite dist",
        "clean:build": "rm -rf public/build",
        "clean:cache": "rm -rf .vite node_modules/.vite",
        "clean:all": "npm run clean && npm run clean:cache",
        "preinstall": "npm run clean:cache",
        "postinstall": "npm run build:dev",
        "size:check": "du -sh public/build/assets/*",
        "size:gzip": "find public/build/assets -name '*.js' -o -name '*.css' | xargs gzip -c | wc -c",
        "performance:lighthouse": "echo 'Run: npx lighthouse http://localhost --view'",
        "lint:js": "echo 'JavaScript linting not configured - consider ESLint'",
        "format": "echo 'Code formatting not configured - consider Prettier'",
        "type-check": "echo 'TypeScript checking not configured - consider adding TypeScript'"
    },
    "devDependencies": {
        "@popperjs/core": "^2.11.8",
        "@soketi/soketi": "^1.6.1",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/postcss": "^4.1.11",
        "@tailwindcss/typography": "^0.5.15",
        "@vitejs/plugin-vue": "^6.0.1",
        "alpinejs": "^3.14.9",
        "autoprefixer": "^10.4.16",
        "axios": "^1.6.2",
        "bootstrap": "^5.3.2",
        "cssnano": "^7.0.7",
        "laravel-vite-plugin": "^2.0.0",
        "lightningcss": "^1.30.1",
        "postcss": "^8.4.49",
        "rollup-plugin-visualizer": "^6.0.3",
        "sass": "^1.83.0",
        "tailwindcss": "^4.1.11",
        "terser": "^5.43.1",
        "vite": "^7.1.2",
        "vue": "^3.3.11"
    },
    "dependencies": {
        "@alpinejs/collapse": "^3.14.9",
        "@alpinejs/focus": "^3.14.9",
        "@alpinejs/intersect": "^3.14.9",
        "@alpinejs/persist": "^3.14.9",
        "@heroicons/vue": "^2.0.18",
        "@inertiajs/vue3": "^2.0.17",
        "@vueuse/components": "^13.6.0",
        "@vueuse/core": "^13.6.0",
        "chart.js": "^4.4.1",
        "chartjs-adapter-date-fns": "^3.0.0",
        "date-fns": "^4.1.0",
        "flatpickr": "^4.6.13",
        "laravel-echo": "^2.2.0",
        "pusher-js": "^8.4.0",
        "socket.io-client": "^4.7.4",
        "sweetalert2": "11.4.8",
        "vue-router": "^4.2.5",
        "zxcvbn": "^4.4.2"
    }
}
