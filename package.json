    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^4.1.0",
    "laravel-echo": "^1.19.0",
    "pusher-js": "^8.4.0",
    "sortablejs": "^1.15.3",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
