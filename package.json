{
  "name": "hdtickets",
  "version": "2.0.0",
  "private": true,
  "description": "HD Tickets - Sports Event Ticket Monitoring Platform",
  "homepage": "https://github.com/polascin/hdTickets#readme",
  "bugs": {
    "url": "https://github.com/polascin/hdTickets/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polascin/hdTickets.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "eslint.config.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint resources/js --ext .js,.ts",
    "lint:fix": "eslint resources/js --ext .js,.ts --fix",
    "analyze": "vite build --mode analyze",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write resources/**/*.{js,ts,css,scss}",
    "format:check": "prettier --check resources/**/*.{js,ts,css,scss}",
    "clean": "rm -rf public/build",
    "type-check": "tsc --noEmit",
    "e2e:install": "playwright install chromium",
    "test:e2e": "playwright test --project=chromium",
    "e2e": "start-server-and-test 'php artisan serve --host=127.0.0.1 --port=8000' http://127.0.0.1:8000 'playwright test --project=chromium'"
  },
  "dependencies": {
    "@alpinejs/focus": "^3.14.1",
    "@alpinejs/persist": "^3.14.1",
    "alpinejs": "^3.14.9",
    "axios": "^1.11.0",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^4.1.0",
    "laravel-echo": "^2.2.3",
    "pusher-js": "^8.4.0",
    "sortablejs": "^1.15.3",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.47.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.18",
    "@types/alpinejs": "^3.13.10",
    "@types/node": "^22.18.0",
    "@types/pusher-js": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.28.1",
    "@typescript-eslint/parser": "^8.28.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.0",
    "cssnano": "^7.1.1",
    "eslint": "^9.34.0",
    "jsdom": "^27.0.0",
    "laravel-vite-plugin": "^2.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "sass": "^1.91.0",
    "start-server-and-test": "^2.0.4",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.7.3",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "workbox-build": "^7.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
