{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./resources/js/*"
      ],
      "@/components/*": [
        "./resources/js/components/*"
      ],
      "@/services/*": [
        "./resources/js/services/*"
      ],
      "@css/*": [
        "./resources/css/*"
      ],
      "@images/*": [
        "./resources/images/*"
      ]
    }
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.js",
    "resources/js/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public/build"
  ]
}