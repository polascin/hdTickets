{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./resources/js/*"
      ],
      "@/components/*": [
        "./resources/js/components/*"
      ],
      "@/services/*": [
        "./resources/js/services/*"
      ],
      "@css/*": [
        "./resources/css/*"
      ],
      "@images/*": [
        "./resources/images/*"
      ],
      "@shared/*": [
        "./resources/js/frameworks/shared/*"
      ],
      "@shared": [
        "./resources/js/frameworks/shared/index"
      ],
      "@frameworks/*": [
        "./resources/js/frameworks/*"
      ],
      "@react/*": [
        "./resources/js/frameworks/react/*"
      ],
      "@vue/*": [
        "./resources/js/frameworks/vue/*"
      ],
      "@angular/*": [
        "./resources/js/frameworks/angular/*"
      ]
    }
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.js",
    "resources/js/**/*.jsx",
    "resources/js/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public/build"
  ]
}