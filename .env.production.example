# HDTickets Advanced Analytics Dashboard - Production Environment Configuration
# Copy this file to .env.production and update with your production values

# =============================================================================
# ANALYTICS DASHBOARD CONFIGURATION
# =============================================================================

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:GENERATE_NEW_KEY_FOR_PRODUCTION

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=hdtickets_production
DB_USERNAME=hdtickets_user
DB_PASSWORD=SECURE_DATABASE_PASSWORD

# Cache Configuration (Recommended: Redis for production)
CACHE_DRIVER=redis
CACHE_PREFIX=hdtickets_analytics_

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=SECURE_REDIS_PASSWORD
REDIS_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=redis

# =============================================================================
# NOTIFICATION CHANNELS CONFIGURATION
# =============================================================================

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_DEFAULT_CHANNEL=#analytics-alerts
SLACK_SIGNING_SECRET=your-slack-signing-secret-here

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# Telegram Integration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=analytics@hdtickets.com
MAIL_FROM_NAME="HDTickets Analytics"

# =============================================================================
# ANALYTICS & ML CONFIGURATION
# =============================================================================

# Machine Learning Features
ML_ENABLED=true
ML_PRICE_PREDICTION_ENABLED=true
ML_AVAILABILITY_FORECASTING_ENABLED=true
ML_DEMAND_ANALYSIS_ENABLED=true

# Analytics Cache Settings
ANALYTICS_CACHE_TTL=3600
ANALYTICS_CACHE_PREFIX=analytics_
ANALYTICS_DATA_RETENTION_DAYS=365

# Performance Optimization
ANALYTICS_QUEUE_BATCH_SIZE=100
ANALYTICS_PROCESSING_TIMEOUT=300
ANALYTICS_MAX_CONCURRENT_JOBS=50

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Security
API_RATE_LIMIT_PER_MINUTE=120
API_WEBHOOK_SECRET=GENERATE_SECURE_WEBHOOK_SECRET

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true

# HTTPS Configuration (Production requirement)
APP_URL=https://analytics.hdtickets.com
FORCE_HTTPS=true
SECURE_HEADERS=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null

# Error Tracking (Recommended: Sentry for production)
SENTRY_LARAVEL_DSN=your-sentry-dsn-here

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key-here

# =============================================================================
# QUEUE WORKER CONFIGURATION
# =============================================================================

# Queue Priority Configuration
QUEUE_ANALYTICS_HIGH=analytics-high
QUEUE_ANALYTICS_MEDIUM=analytics-medium
QUEUE_NOTIFICATIONS=notifications
QUEUE_DEFAULT=default

# Worker Memory Limits
QUEUE_WORKER_MEMORY_HIGH=256
QUEUE_WORKER_MEMORY_MEDIUM=128
QUEUE_WORKER_MEMORY_NOTIFICATIONS=64
QUEUE_WORKER_MEMORY_DEFAULT=128

# Worker Timeout Settings
QUEUE_WORKER_TIMEOUT_HIGH=300
QUEUE_WORKER_TIMEOUT_MEDIUM=120
QUEUE_WORKER_TIMEOUT_NOTIFICATIONS=60
QUEUE_WORKER_TIMEOUT_DEFAULT=60

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Ticket Platform APIs
TICKETMASTER_API_KEY=your-ticketmaster-api-key
STUBHUB_API_KEY=your-stubhub-api-key
VIAGOGO_API_KEY=your-viagogo-api-key
SEATGEEK_API_KEY=your-seatgeek-api-key

# External Analytics Services
GOOGLE_ANALYTICS_ID=your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Maintenance Mode
MAINTENANCE_MODE_SECRET=your-maintenance-secret-key
