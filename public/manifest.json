  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View main dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/assets/images/pwa/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Subscription",
      "short_name": "Subscription",
      "description": "Manage your subscription plan",
      "url": "/subscription",
      "icons": [
        {
          "src": "/assets/images/pwa/shortcut-subscription.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Profile Settings",
      "short_name": "Profile",
      "description": "Manage account and security settings",
      "url": "/profile",
      "icons": [
        {
          "src": "/assets/images/pwa/shortcut-profile.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Ticket Monitoring",
      "short_name": "Monitor",
      "description": "Monitor sports ticket availability",
      "url": "/monitoring",
      "icons": [
        {
          "src": "/assets/images/pwa/shortcut-monitor.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+hdtickets",
      "url": "/admin/handle/%s"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/admin/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/admin/import-shared",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "data",
          "accept": ["text/csv", "application/json"]
        }
      ]
    }
  },
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone"],
  "related_applications": [],
  "iarc_rating_id": "",
  "dir": "ltr",
  "lang": "en",
  "version": "1.2.0"
