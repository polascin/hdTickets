{
    "name": "sports-ticket-monitor/app",
    "description": "Sports Event Ticket Availability Monitoring System - A comprehensive platform for monitoring ticket availability across multiple sports event platforms",
    "version": "2025.07.v3",
    "type": "project",
    "keywords": ["sports", "tickets", "monitoring", "alerts", "events", "scraping"],
    "authors": [
        {
            "name": "Walter Csoelle",
            "real_name": "Lubomir Polascin",
            "role": "Developer & System Architect",
            "email": "info@example.com",
            "homepage": "https://github.com/walter-csoelle"
        }
    ],
    "require": {
        "laravel/framework": "^12.20",
        "laravel/tinker": "^2.10",
        "laravel/sanctum": "^4.1",
        "laravel/passport": "^13.0",
        "guzzlehttp/guzzle": "^7.9",
        "symfony/dom-crawler": "^7.3",
        "symfony/css-selector": "^7.3"
    },
    "require-dev": {
        "laravel/breeze": "^2.3",
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.4",
        "larastan/larastan": "^3.0",
        "spatie/laravel-ignition": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
