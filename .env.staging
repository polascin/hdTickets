APP_NAME="HD Tickets - Staging"
APP_ENV=staging
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Europe/Bratislava
APP_URL=https://staging.hdtickets.polascin.net

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database Configuration - Master-Slave Setup
DB_CONNECTION=mysql
DB_HOST=staging-db-master.hdtickets.internal
DB_PORT=3306
DB_DATABASE=hdtickets_staging
DB_USERNAME=hdtickets_staging_user
DB_PASSWORD=

# Read Replica Configuration
DB_READ_HOST=staging-db-slave.hdtickets.internal
DB_READ_PORT=3306
DB_READ_DATABASE=hdtickets_staging
DB_READ_USERNAME=hdtickets_staging_read_user
DB_READ_PASSWORD=

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.hdtickets.polascin.net

BROADCAST_CONNECTION=pusher
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

# Redis Configuration for Production Caching
CACHE_STORE=redis
CACHE_PREFIX=hdtickets_staging_
REDIS_CLIENT=phpredis
REDIS_HOST=staging-redis.hdtickets.internal
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@hdtickets.polascin.net"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=hdtickets-staging-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=eu

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Security Configuration
ENCRYPTION_KEY_ROTATION_ENABLED=true
SECURITY_AUDIT_ENABLED=true
ACCOUNT_HEALTH_MONITORING_ENABLED=true

# Rate Limiting for Production Load
RATE_LIMIT_GENERAL=120
RATE_LIMIT_API=200
RATE_LIMIT_SCRAPING=20
RATE_LIMIT_LOGIN=5

# CAPTCHA Service Configuration
CAPTCHA_ENABLED=true
CAPTCHA_SERVICE=2captcha
TWOCAPTCHA_API_KEY=
TWOCAPTCHA_SOFT_ID=
CAPTCHA_TIMEOUT=120
CAPTCHA_POLLING_INTERVAL=5

# Load Testing Configuration
LOAD_TESTING_ENABLED=false
MAX_CONCURRENT_USERS=500
CONNECTION_POOL_SIZE=30
REQUEST_TIMEOUT=30

# Account Health Monitoring
ACCOUNT_VALIDATION_INTERVAL=1800
FAILED_LOGIN_THRESHOLD=3
ACCOUNT_LOCKOUT_DURATION=900
SUSPICIOUS_ACTIVITY_THRESHOLD=5

# Monitoring & APM
NEW_RELIC_ENABLED=true
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME="HDTickets-Staging"

DATADOG_ENABLED=false
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Error Tracking
SENTRY_ENABLED=true
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Proxy Configuration for Scraping
PROXY_ROTATION_ENABLED=true
PROXY_POOL_SIZE=10
PROXY_TIMEOUT=30
PROXY_RETRY_ATTEMPTS=3

# Performance Optimization
OPCACHE_ENABLED=true
QUERY_CACHE_ENABLED=true
VIEW_CACHE_ENABLED=true
CONFIG_CACHE_ENABLED=true
ROUTE_CACHE_ENABLED=true
